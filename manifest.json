{
	"manifest_version": 2,
	"author": "Paul Blackman",
	"content_scripts": [ {
		"exclude_globs":  		[  ],
		"include_globs":  		[ "*" ],
		"css": 			  		[ "loadxml.css"
								],
		"js":             		[ "embeddedXMLViewer.js",
								  "loadxml.js"	 ],
		"matches":        		[ "file://*/*",
								  "http://*/teamworks/*",
								  "https://*/teamworks/*"
								],
		"run_at": "document_end"
	} ],
	"background": {
		"scripts": 				[ "options.js" ],
		"persistent": 			false
	},
	"web_accessible_resources": [

								],
	"permissions": 				[
								  "storage", "activeTab"
								],
	"icons": { "16": "bug_iibpd_16.png", "32": "bug_iibpd_32.png", "48": "bug_iibpd_48.png", "128": "bug_iibpd_128.png" },
	"browser_action": {
          "default_icon": { "19": "bug_iibpd_19.png", "38": "bug_iibpd_38.png"},
          "default_title": "Configure iibpd",
          "default_popup": "options.html"
        },
	"options_page": "options.html",
	"description":  "Improves the process debugger by displaying XML data objects colourised and collapsible.",
	"name":         "Improved IBM BPM Process Debugger",
	"short_name":	"iibpd",
	"version":      "1.2.4"
}
